{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@tenderlysim/*": ["./*"]
    }
  },
  "include": ["src/**/*", "./.eslintrc.js"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }

}
